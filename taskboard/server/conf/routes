# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                             com.kostya.taskboard.controllers.Application.index
# tickets creation
GET        /api-rest/create-ticket       com.kostya.taskboard.controllers.CreateTicket.createTicketPage
POST       /api-rest/create-ticket       com.kostya.taskboard.controllers.CreateTicket.createTicket
# get created tickets
GET        /api-rest/get-tickets         com.kostya.taskboard.controllers.Application.getAllTickets

# projects creation
GET        /api-rest/create-project       com.kostya.taskboard.controllers.CreateProject.createProjectPage
POST       /api-rest/create-project       com.kostya.taskboard.controllers.CreateProject.createProject
# get created projects
GET        /api-rest/get-projects         com.kostya.taskboard.controllers.Application.getAllProjects

# Prefix must match `play.assets.urlPrefix`
GET        /assets/*file                 controllers.Assets.at(file)
GET        /versionedAssets/*file        controllers.Assets.versioned(path="/public", file: Asset)
